<?xml version="1.0"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" removedEffect="dissolveOut" visible="true" backgroundColor="#91A7B2">
    <mx:Script><![CDATA[
        [Bindable]
        public var message:String;
        ]]></mx:Script>

    <mx:HBox borderStyle="solid" cornerRadius="10" width="200" horizontalScrollPolicy="off" height="100">
        <mx:Text id="notificationMessage" text="{message}"/>
    </mx:HBox>

</mx:VBox>
