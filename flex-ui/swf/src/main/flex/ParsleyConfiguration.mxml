<?xml version="1.0"?>
<mx:Object xmlns:mx="http://www.adobe.com/2006/mxml"
           xmlns:services="org.axonframework.examples.addressbook.services.*"
           xmlns:actions="org.axonframework.examples.addressbook.actions.*"
           xmlns:sf="http://www.spicefactory.org/parsley"
           xmlns:commands="org.axonframework.examples.addressbook.commands.*"
           xmlns:model="org.axonframework.examples.addressbook.model.*"
        >

    <mx:RemoteObject
            id="remoteAddressService"
            destination="addressService"
            endpoint="http://localhost:8080/messagebroker/amf"
            showBusyCursor="true"/>


    <services:AddressServiceRemote/>
    <!--<services:AddressServiceStub/>-->

    <commands:SearchAddressCommand/>
    <!--<commands:NewAddressCommand/>-->
    <commands:ShowContactsCommand/>
    <commands:NewContactCommand/>
    <commands:SelectContactCommand/>


    <sf:DynamicCommand type="{NewAddressCommand}" messageType="{NewAddressMessage}"/>

    <model:AddressModel/>
    <model:ContactModel/>

    <mx:Script><![CDATA[
        import org.axonframework.examples.addressbook.commands.NewAddressCommand;
        import org.axonframework.examples.addressbook.messages.NewAddressMessage;
        ]]></mx:Script>
</mx:Object>
