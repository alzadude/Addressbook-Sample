<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="managementContext" class="org.axonframework.monitoring.jmx.ManagementContext">
        <property name="enabled" value="true"/>
    </bean>

    <bean id="simpleEventBusManager" class="org.axonframework.monitoring.jmx.eventhandling.SimpleEventBusManager">
        <constructor-arg index="0" ref="eventBus"/>
        <constructor-arg index="1" ref="managementContext"/>
    </bean>

    <bean id="simpleCommandBusManager" class="org.axonframework.monitoring.jmx.commandhandling.SimpleCommandBusManager">
        <constructor-arg index="0" ref="commandBus"/>
        <constructor-arg index="1" ref="managementContext"/>
    </bean>
</beans>