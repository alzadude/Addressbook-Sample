<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.axonframework.core.eventhandler.annotation.postprocessor.AnnotationEventListenerBeanPostProcessor"/>

    <bean id="eventBus" class="org.axonframework.core.eventhandler.AsyncEventBus">
        <property name="executor" ref="taskExecutor"/>
    </bean>

    <bean id="taskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="corePoolSize" value="20"/>
        <property name="maxPoolSize" value="100"/>
        <property name="waitForTasksToCompleteOnShutdown" value="true"/>
    </bean>

    <bean id="contactRepository" class="org.axonframework.sample.app.command.ContactRepository">
        <property name="eventBus" ref="eventBus"/>
        <property name="eventStore" ref="eventStore"/>
    </bean>

    <bean id="eventStore" class="org.axonframework.core.repository.eventsourcing.XStreamFileSystemEventStore">
        <property name="baseDir" value="file:${java.io.tmpdir}"/>
    </bean>

    <bean id="contactCommandHandler" class="org.axonframework.sample.app.command.ContactCommandHandler">
        <property name="repository" ref="contactRepository"/>
    </bean>

</beans>